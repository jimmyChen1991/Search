<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/ffffff">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingRight="15dp">
            <ImageButton
                android:id="@+id/backbtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/back" />
            <TextView
                android:id="@id/searchbar"
                android:layout_width="@dimen/searchboxWidth"
                android:layout_height="34dp"
                android:layout_toRightOf="@id/backbtn"
                android:layout_marginLeft="10dp"
                android:background="@drawable/edit_shape"
                android:textColor="@color/gray"
                android:text="@string/searchbartext"
                android:textSize="18sp"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"/>
            <ImageButton
                android:id="@+id/backtomain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@drawable/allshop_search_tomian"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">
            <TextView
                android:id="@+id/searchtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/smallTitle"
                android:background="@color/ffffff"
                android:letterSpacing="0.1"
                android:textColor="@color/maincolor" />
            <ImageButton android:id="@+id/tochosebtn"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:background="@drawable/goodlistchose_selector"/>
            <ImageButton
                android:id="@+id/choseprice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/tochosebtn"
                android:layout_marginRight="@dimen/dp_15"
                android:background="@drawable/allshop_search_goodlist_price_normal" />
            <ImageButton
                android:id="@+id/chosenew"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/choseprice"
                android:layout_marginRight="@dimen/dp_15"
                android:background="@drawable/allshop_search_goodlist_newgood_normal"/>
            <ImageButton
                android:id="@+id/chosehotsale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/chosenew"
                android:layout_marginRight="@dimen/dp_15"
                android:background="@drawable/allshop_search_goodlist_salenew_normal"/>
            <ImageButton
                android:id="@+id/chosengerenal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/chosehotsale"
                android:layout_marginRight="@dimen/dp_15"
                android:background="@drawable/allshop_search_goodlist_gerenal_pressed"/>
        </RelativeLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1.5dp"
            android:background="#e5e5e5" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="20dp"
            android:background="@color/mygray">
            <android.support.v7.widget.RecyclerView
                android:id="@+id/attr_group_wrap"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:paddingLeft="20dp"/>
            <RelativeLayout
                android:id="@+id/activelayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/attr_group_wrap"
                android:visibility="gone"
                android:paddingLeft="@dimen/dp_20"
                android:paddingRight="20dip"
                android:background="#f2f2f2">
                <TextView
                    android:id="@+id/activitydetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#666666"
                    android:textSize="15sp"
                    android:layout_marginBottom="5dip"
                    android:maxLines="3"
                    android:ellipsize="end"
                    />
            </RelativeLayout>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/goods_wrap"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/activelayout"
                android:fitsSystemWindows="true"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"/>
            <ImageButton
                android:id="@+id/backtotop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="150dp"
                android:layout_marginRight="50dp"
                android:background="@drawable/search_backtotop" />
            <LinearLayout
                android:id="@+id/bottomshopcat"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:visibility="gone"
                android:layout_alignParentBottom="true"
                android:background="#000000"
                android:layout_height="70dip">
                <LinearLayout
                    android:layout_width="0dip"
                    android:layout_weight="7"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingLeft="30dip"
                    android:paddingTop="5dip"
                    >
                    <TextView
                        android:id="@+id/cast"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:textColor="@color/maincolor"
                        android:text="小计"
                        />
                    <TextView
                        android:id="@+id/cut"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:textColor="@color/maincolor"
                        android:text="优惠"
                        android:layout_marginTop="10dip"
                        />
                </LinearLayout>
                <Button
                    android:id="@+id/goshopcat"
                    android:layout_weight="3"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:background="@drawable/button_corner_selector"
                    android:text="购物车"
                    android:textColor="#ffffff"
                    android:textSize="20sp"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/full"
                android:orientation="horizontal"
                android:visibility="gone"
                android:layout_marginLeft="20dip"
                android:layout_marginRight="20dip"
                android:layout_width="match_parent"
                android:layout_height="30dip"
                android:background="@drawable/full_reduce_shape"
                android:layout_marginBottom="10dip"
                android:layout_above="@+id/bottomshopcat">
                <TextView
                    android:id="@+id/fullin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="#666666"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="30dip"
                    />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/drawer_right"
        android:layout_width="@dimen/drawerWidth"
        android:layout_height="match_parent"
        android:background="@color/ffffff"
        android:layout_gravity="right"
        android:paddingTop="10dp"
        android:clickable="true">
        <TextView
            android:id="@+id/filter_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textColor="@color/light"
            android:textSize="@dimen/sp_21"
            android:text="@string/filter"/>
        <TextView
            android:id="@+id/filter_title_split"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/filter_title"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@color/gray"/>
        <RelativeLayout
            android:id="@+id/only_hasstock_wrap"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@+id/filter_title_split">
            <TextView
                android:id="@+id/only_hasstock_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:textColor="@color/delight"
                android:textSize="@dimen/sp_20"
                android:text="@string/only_hasstock"/>
            <CheckBox
                android:id="@+id/has_stock_cb"
                android:layout_width="@dimen/dp_50"
                android:layout_height="@dimen/dp_50"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:layout_alignParentRight="true"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:background="@color/gray"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/only_hasstock_wrap"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_weight="0.45"
                android:background="@color/gray_f2"
                android:paddingBottom="@dimen/dp_20"
                android:orientation="vertical">
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/verticalpeoperty_rv"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.95" />
                <Button
                    android:id="@+id/vertical_reset"
                    android:layout_width="200dp"
                    android:layout_height="0dp"
                    android:layout_weight="0.05"
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_gravity="center"
                    android:text="@string/reset"
                    android:background="@drawable/button_corner_selector"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_weight="0.55"
                android:paddingBottom="@dimen/dp_20"
                android:orientation="vertical">
                <include layout="@layout/head_verticalfilter"/>
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/peopertyitem_rv"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_weight="0.95"/>
                <Button
                    android:id="@+id/vertical_confirm"
                    android:layout_width="260dp"
                    android:layout_height="0dp"
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_weight="0.05"
                    android:layout_gravity="center"
                    android:text="@string/queding"
                    android:background="@drawable/button_corner_selector"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</android.support.v4.widget.DrawerLayout>