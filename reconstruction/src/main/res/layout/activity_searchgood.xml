<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/ffffff">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingRight="15dp">
            <ImageButton
                android:id="@+id/backbtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/back" />
            <TextView
                android:id="@id/searchbar"
                android:layout_width="@dimen/searchboxWidth"
                android:layout_height="34dp"
                android:layout_toRightOf="@id/backbtn"
                android:layout_marginLeft="10dp"
                android:background="@drawable/edit_shape"
                android:textColor="@color/gray"
                android:text="@string/searchbartext"
                android:textSize="18sp"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"/>
            <ImageButton
                android:id="@+id/backtomain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@drawable/allshop_search_tomian"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/searchtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/smallTitle"
                android:background="@color/ffffff"
                android:letterSpacing="0.1"
                android:textColor="@color/maincolor"
                android:gravity="center" />
            <ImageButton
                android:id="@+id/chosengerenal"
                android:layout_marginStart="260dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/allshop_search_goodlist_gerenal_pressed"/>
            <ImageButton
                android:id="@+id/chosehotsale"
                android:layout_marginStart="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/allshop_search_goodlist_hotsale_normal"/>
            <ImageButton
                android:id="@+id/chosenew"
                android:layout_marginStart="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/allshop_search_goodlist_newarrival_normal"/>
            <ImageButton
                android:id="@+id/choseprice"
                android:layout_marginStart="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/allshop_search_goodlist_price_normal" />
            <ImageButton android:id="@+id/tochosebtn"
                android:layout_marginStart="15dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:background="@drawable/goodlistchose_selector"/>
        </LinearLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1.5dp"
            android:background="#e5e5e5" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="20dp"
            android:paddingTop="20dp"
            android:background="@color/mygray">
            <android.support.v7.widget.RecyclerView
                android:id="@+id/attr_group_wrap"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </android.support.v7.widget.RecyclerView>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/goods_wrap"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/attr_group_wrap"
                android:layout_marginTop="20dp"
                android:fitsSystemWindows="true"
                android:paddingRight="20dp"/>
            <ImageButton
                android:id="@+id/backtotop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="150dp"
                android:layout_marginRight="50dp"
                android:background="@drawable/search_backtotop" />
        </RelativeLayout>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/drawer_right"
        android:layout_width="@dimen/drawerWidth"
        android:layout_height="match_parent"
        android:background="@color/ffffff"
        android:layout_gravity="right"
        android:clickable="true">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="242afaf"/>
    </RelativeLayout>
</android.support.v4.widget.DrawerLayout>